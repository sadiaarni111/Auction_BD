@using PagedList.Mvc
@model PagedList.IPagedList<Auction_BD.Models.cetagory>
@{
    ViewBag.Title = "ViewCategory";
    Layout = "~/Views/Shared/_Layout2.cshtml";

}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="height:1150px; ">
        <div class="row">
           

        </div>



        <div class="row" style="margin-bottom:40px">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">
                        <img src="@Url.Content(item.cat_iamge)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
                        <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">@item.cat_name</h4>
                        <div style="margin-left:160px">
                            @Html.ActionLink("Delete", "Deletes", new { id = item.cat_id }, new { @class = "btn btn-danger btn-sm" })

                        </div>
                    </div>

                }
            }








        </div>


    </div>

    <div id="container" style="margin-left: 20px">
        <p></p>
        <p></p>
        <div class="pagination" style="margin-left: 400px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("ViewCategory", new { page }))
        </div>
    </div>
</body>
</html>




